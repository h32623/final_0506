	<!-- Tab panes -->
<!--      <div class="tab-content">-->
      	
      	
    
    
    <!--프로필들-->
    <div role="tabpanel" class="tab-pane active" id="home">			
		<div class="container">
	        <hr>
	        <div class="row">
	            <div class="col-lg-12">
	                <h3>개인 프로필</h3>
	            </div>
	        </div>
	
	
	<% @assems.each_with_index do |p, i| %>
	
	       	<div class="text-center">
	       		
				<div class="col-md-3 col-sm-6 hero-feature">
					
	                <div class="thumbnail">
	                	
	                    <!--프로필 사진 (800x500)-->
	                    <img src="images/<%= p.man_key %>.jpg" style='width:500px;height:300px' alt="">
	                    	<div class="caption">
								<h3>이름 : <%= p.name %></h3>
									<p>선거구 : <%= p.precinct %></p>
	                       	 		<p>정당 : <%= p.party %></p>
	                        		<!--<p>대표법안:</p>-->
	                        	
	                        	
	                        		<p>
	                                	<button type="button" class="btn btn-info btn-md" data-toggle="modal" data-target="#myModal<%= i %>">자세히</button>
	                                	<div class="modal fade" id="myModal<%= i %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	                                 	 	<div class="modal-dialog" role="document">
	                                    	<div class="modal-content">
	                                      		<div class="modal-header">
	                                        	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	                                        		<h4 class="modal-title" id="myModalLabel"><%= p.name %></h4>
	                                      		</div>
	                                      		<div class="modal-body">
	                                        	<%= p.precinct %> <br>
	                                        	<%= p.party %> <br>
	                                        	<%= p.elec_count %> <br>
	                                        	<%= p.email %> <br>
	                                        	<%= p.home_url %> <br>
	                                        	<%= p.call_number %> <br>
	
	                                      		</div>
	                                      		<div class="modal-footer">
	                                        		<button type="button" class="btn btn-default" data-dismiss="modal">닫기</button>
	                                      		</div>
	                                    	</div>
	                                  		</div>
	                                	</div>                                        
	                        		</p>
	                    	</div>
	                	</div>
	            	</div>
			</div>
			
			<% end %>
	</div>
</div>












	</body>
</html>